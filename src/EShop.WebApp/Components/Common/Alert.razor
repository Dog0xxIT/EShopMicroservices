@using EShop.WebApp.Models.Enums

<div class="space-y-4">
    @switch (AlertType)
    {
        case AlertType.Primary:
            <div class="p-4 bg-primary text-primary-foreground relative w-full rounded-lg border [&amp;>svg+div]:translate-y-[-3px] [&amp;>svg]:absolute [&amp;>svg]:left-4 [&amp;>svg]:top-4 [&amp;>svg]:text-foreground [&amp;>svg~*]:pl-7"
                 role="alert">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="24"
                     height="24"
                     viewBox="0 0 24 24"
                     fill="none"
                     stroke="currentColor"
                     stroke-width="2"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     class="h-5 w-5 text-primary-foreground">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 16v-4"></path>
                    <path d="M12 8h.01"></path>
                </svg>
                <h5 class="mb-1 text-primary-foreground font-medium leading-none tracking-tight">@Title</h5>
                <div class="text-primary-foreground text-sm [&amp;_p]:leading-relaxed">
                    @Content
                </div>
            </div>
            break;

        case AlertType.Success:
            <div class="p-4 bg-[#4ade80] text-success-foreground relative w-full rounded-lg border [&amp;>svg+div]:translate-y-[-3px] [&amp;>svg]:absolute [&amp;>svg]:left-4 [&amp;>svg]:top-4 [&amp;>svg]:text-foreground [&amp;>svg~*]:pl-7"
                 role="alert">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="24"
                     height="24"
                     viewBox="0 0 24 24"
                     fill="none"
                     stroke="currentColor"
                     stroke-width="2"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     class="h-5 w-5 text-success-foreground">
                    <path d="M20 6 9 17l-5-5"></path>
                </svg>
                <h5 class="mb-1 text-success-foreground font-medium leading-none tracking-tight">Success Alert</h5>
                <div class="text-success-foreground text-sm [&amp;_p]:leading-relaxed">
                    This is a success alert with an icon, title, and description.
                </div>
            </div>
            break;

        case AlertType.Warning:
            <div class="p-4 bg-[#fbbf24] text-warning-foreground relative w-full rounded-lg border [&amp;>svg+div]:translate-y-[-3px] [&amp;>svg]:absolute [&amp;>svg]:left-4 [&amp;>svg]:top-4 [&amp;>svg]:text-foreground [&amp;>svg~*]:pl-7"
                 role="alert">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="24"
                     height="24"
                     viewBox="0 0 24 24"
                     fill="none"
                     stroke="currentColor"
                     stroke-width="2"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     class="h-5 w-5 text-warning-foreground">
                    <path d="M13.73 4a2 2 0 0 0-3.46 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"></path>
                </svg>
                <h5 class="mb-1 text-warning-foreground font-medium leading-none tracking-tight">Warning Alert</h5>
                <div class="text-warning-foreground text-sm [&amp;_p]:leading-relaxed">
                    This is a warning alert with an icon, title, and description.
                </div>
            </div>
            break;

        case AlertType.Danger:
            <div class="p-4 bg-[#ef4444] text-danger-foreground relative w-full rounded-lg border [&amp;>svg+div]:translate-y-[-3px] [&amp;>svg]:absolute [&amp;>svg]:left-4 [&amp;>svg]:top-4 [&amp;>svg]:text-foreground [&amp;>svg~*]:pl-7"
                 role="alert">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="24"
                     height="24"
                     viewBox="0 0 24 24"
                     fill="none"
                     stroke="currentColor"
                     stroke-width="2"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     class="h-5 w-5 text-danger-foreground">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </div>
            break;
    }
</div>

@code
{
    [Parameter, EditorRequired]
    public AlertType AlertType { get; set; }

    [Parameter, EditorRequired]
    public string Title { get; set; }

    [Parameter, EditorRequired]
    public string Content { get; set; }

    protected override void OnInitialized()
    {
    }
}
