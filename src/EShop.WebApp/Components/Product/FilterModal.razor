                                                        <div class="flex items-center">
                                                            <input for="@brand.Id" type="checkbox" value="" class="h-4 w-4 border-gray-300 bg-gray-100 text-primary-600 rounded focus:ring-2 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:ring-offset-gray-800 dark:focus:ring-primary-600" />

