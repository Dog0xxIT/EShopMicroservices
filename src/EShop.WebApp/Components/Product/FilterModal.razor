@using WebApp.Services.CatalogService

@inject ICatalogService CatalogService

<!-- Filter modal -->
<div class="relative z-10 @(Visible ? "" : "hidden")" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <!--
        Background backdrop, show/hide based on modal state.

        Entering: "ease-out duration-300"
          From: "opacity-0"
          To: "opacity-100"
        Leaving: "ease-in duration-200"
          From: "opacity-100"
          To: "opacity-0"
      -->
    <div class="inset-0 bg-gray-500 fixed bg-opacity-75 transition-opacity" aria-hidden="true"></div>

    <div class="inset-0 fixed z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center text-center sm:items-center sm:p-0">
            <!--
              Modal panel, show/hide based on modal state.

              Entering: "ease-out duration-300"
                From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                To: "opacity-100 translate-y-0 sm:scale-100"
              Leaving: "ease-in duration-200"
                From: "opacity-100 translate-y-0 sm:scale-100"
                To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
            -->
            <form action="#" method="get" id="filterModal" tabindex="-1" aria-hidden="true" class="h-modal mt-1 fixed z-50 flex w-full justify-center overflow-y-auto overflow-x-hidden md:inset-0 md:h-full">
                <div class="relative h-full w-full max-w-xl md:h-auto">
                    <!-- Modal content -->
                    <div class="bg-white relative rounded-lg shadow dark:bg-gray-800">
                        <!-- Modal header -->
                        <div class="p-4 flex items-start justify-between rounded-t md:p-5">
                            <h3 class="text-gray-500 text-lg font-normal dark:text-gray-400">Filters</h3>
                            <button type="button" @onclick="OnCloseModal" aria-autocompleteclass="bg-transparent p-1.5 text-gray-400 ml-auto inline-flex items-center rounded-lg text-sm hover:bg-gray-100 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="filterModal">
                                <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18 17.94 6M18 18 6.06 6" />
                                </svg>
                                <span class="sr-only">Close modal</span>
                            </button>
                        </div>
                        <!-- Modal body -->
                        <div class="px-4 md:px-5">
                            <div class="mb-4 border-gray-200 border-b dark:border-gray-700">
                                <ul class="-mb-px flex flex-wrap text-center text-sm font-medium" id="myTab" data-tabs-toggle="#myTabMessageError" role="tablist">
                                    <li class="mr-1" role="presentation">
                                        <button @onclick="() => _tabActive = TabActive.Brand" class="pb-2 pr-1 inline-block" id="brand-tab" data-tabs-target="#brand" type="button" role="tab" aria-controls="profile" aria-selected="false">Brand</button>
                                    </li>
                                    <li class="mr-1" role="presentation">
                                        <button @onclick="() => _tabActive = TabActive.AdvancedFilters" class="px-2 pb-2 inline-block hover:border-gray-300 hover:text-gray-600 dark:hover:text-gray-300" id="advanced-filers-tab" data-tabs-target="#advanced-filters" type="button" role="tab" aria-controls="advanced-filters" aria-selected="false">Advanced Filters</button>
                                    </li>
                                </ul>
                            </div>
                            @switch (_tabActive)

                            {

                                case TabActive.Brand:
                                    <div id="myTabContent">
                                        <div class="gap-4 grid grid-cols-2 md:grid-cols-3" id="brand" role="tabpanel" aria-labelledby="brand-tab">
                                            @foreach (var groupBrand in _groupBrandByFirstChar)

                                            {
                                                <div class="space-y-2">
                                                    <h5 class="text-black text-lg font-medium uppercase dark:text-white">@groupBrand.Key</h5>
