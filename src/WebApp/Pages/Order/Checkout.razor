@page "/checkout"

@using WebApp.Components.Order

@inject NavigationManager _navManager

<TelerikStepper Linear="true" ValueChanged="@ValueChangeHandler">
    <StepperSteps>
        <StepperStep Label="Shipping address"></StepperStep>
        <StepperStep Label="Payment method"></StepperStep>
        <StepperStep Label="Items & shipping"></StepperStep>
        <StepperStep Label="Review order" Disabled="true"></StepperStep>
    </StepperSteps>
</TelerikStepper>

@if (stepIndex == 0)
{
    <CheckoutAddressForm></CheckoutAddressForm>
}
else if (stepIndex == 1)
{
    <CheckoutPaymentForm></CheckoutPaymentForm>
}

@code {

    public int stepIndex;

    public void ValueChangeHandler(int index)
    {
        stepIndex = index;
    }
}