@page "/cart"

@using Microsoft.AspNetCore.Authorization
@using WebApp.Services.BasketService
@using WebApp.Components.Order

@* @attribute [Authorize] *@

@inject IBasketService BasketService

<TelerikTileLayout Columns="4"
                   Resizable="false"
                   Reorderable="false"
                   Class="bg-transparent"
                   RowHeight="1">
    <TileLayoutItems>
        <TileLayoutItem HeaderText="Shopping Cart" ColSpan="3" RowSpan="_basketItemList.Count+1">
            <Content>
                @foreach (var baskItem in _basketItemList)
                {
                        <TelerikCard Orientation="CardOrientation.Horizontal" Class="mb-4">
                            <CardImage Src="@baskItem.PictureUrl" Height="120px" Width="120px"></CardImage>

                            <CardHeader>
                                <CardTitle>@baskItem.ProductName</CardTitle>
                                <CardSubTitle>@baskItem.UnitPrice</CardSubTitle>
                            </CardHeader>
                            <CardBody>
                                <p>Some quick example text to build on the card title and make up the bulk of the card content.</p>
                            </CardBody>
                            <CardSeparator></CardSeparator>
                            <CardActions>
                               <TelerikNumericTextBox @bind-Value="@baskItem.Quantity" Width="100px"></TelerikNumericTextBox>
                                <TelerikButton>Delete</TelerikButton>
                            </CardActions>
                        </TelerikCard>
                }
            </Content>
        </TileLayoutItem>
        <TileLayoutItem HeaderText="Total" ColSpan="1" RowSpan="2">
            <Content>You can put components in the tiles too.</Content>
        </TileLayoutItem>
    </TileLayoutItems>
</TelerikTileLayout>