@page "/order/confirmation"

<section class="bg-white py-8 antialiased dark:bg-gray-900 md:py-16">
    <div class="px-4 mx-auto max-w-2xl 2xl:px-0">
        <h2 class="text-gray-900 mb-2 text-xl font-semibold dark:text-white sm:text-2xl">Thanks for your order!</h2>
        <p class="text-gray-500 mb-6 dark:text-gray-400 md:mb-8">Your order <a href="#" class="text-gray-900 font-medium hover:underline dark:text-white">#7564804</a> will be processed within 24 hours during working days. We will notify you by email once your order has been shipped.</p>
        <div class="space-y-4 border-gray-100 bg-gray-50 p-6 mb-6 rounded-lg border dark:border-gray-700 dark:bg-gray-800 sm:space-y-2 md:mb-8">
            <dl class="gap-4 items-center justify-between sm:flex">
                <dt class="mb-1 text-gray-500 font-normal dark:text-gray-400 sm:mb-0">Date</dt>
                <dd class="text-gray-900 font-medium dark:text-white sm:text-end">14 May 2024</dd>
            </dl>
            <dl class="gap-4 items-center justify-between sm:flex">
                <dt class="mb-1 text-gray-500 font-normal dark:text-gray-400 sm:mb-0">Payment Method</dt>
                <dd class="text-gray-900 font-medium dark:text-white sm:text-end">JPMorgan monthly installments</dd>
            </dl>
            <dl class="gap-4 items-center justify-between sm:flex">
                <dt class="mb-1 text-gray-500 font-normal dark:text-gray-400 sm:mb-0">Name</dt>
                <dd class="text-gray-900 font-medium dark:text-white sm:text-end">Flowbite Studios LLC</dd>
            </dl>
            <dl class="gap-4 items-center justify-between sm:flex">
                <dt class="mb-1 text-gray-500 font-normal dark:text-gray-400 sm:mb-0">Address</dt>
                <dd class="text-gray-900 font-medium dark:text-white sm:text-end">34 Scott Street, San Francisco, California, USA</dd>
            </dl>
            <dl class="gap-4 items-center justify-between sm:flex">
                <dt class="mb-1 text-gray-500 font-normal dark:text-gray-400 sm:mb-0">Phone</dt>
                <dd class="text-gray-900 font-medium dark:text-white sm:text-end">+(123) 456 7890</dd>
            </dl>
        </div>
        <div class="space-x-4 flex items-center">
            <a href="#" class="text-white bg-primary-700 px-5 py-2.5 rounded-lg text-sm font-medium hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 focus:outline-none dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Track your order</a>
            <a href="#" class="py-2.5 px-5 text-gray-900 bg-white border-gray-200 rounded-lg border text-sm font-medium hover:bg-gray-100 hover:text-primary-700 focus:outline-none focus:z-10 focus:ring-4 focus:ring-gray-100 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:focus:ring-gray-700 dark:hover:text-white dark:hover:bg-gray-700">Return to shopping</a>
        </div>
    </div>
</section>