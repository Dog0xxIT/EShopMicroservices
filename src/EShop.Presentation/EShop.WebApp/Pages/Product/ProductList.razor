@page "/products"

@using EShop.WebApp.Components.Product

@inject ICatalogService CatalogService

<div class="bg-white">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="border-gray-200 pb-6 pt-4 flex items-baseline justify-between border-b">
            <h1 class="text-gray-900 text-4xl font-bold tracking-tight">New Arrivals</h1>

            <div class="flex items-center">
                <div class="relative inline-block text-left">
                    <div>
                        <button type="button" class="text-gray-700 group inline-flex justify-center text-sm font-medium hover:text-gray-900" id="menu-button" aria-expanded="false" aria-haspopup="true">
                            Sort
                            <svg class="-mr-1 ml-1 h-5 w-5 text-gray-400 group-hover:text-gray-500 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>

                    <!--
                      Dropdown menu, show/hide based on menu state.

                      Entering: "transition ease-out duration-100"
                        From: "transform opacity-0 scale-95"
                        To: "transform opacity-100 scale-100"
                      Leaving: "transition ease-in duration-75"
                        From: "transform opacity-100 scale-100"
                        To: "transform opacity-0 scale-95"
                    -->
                    <div class="right-0 mt-2 w-40 bg-white ring-black absolute z-10 origin-top-right rounded-md shadow-2xl ring-1 ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
                        <div class="py-1" role="none">
                            <!--
                              Active: "bg-gray-100", Not Active: ""

                              Selected: "font-medium text-gray-900", Not Selected: "text-gray-500"
                            -->
                            <a href="#" class="px-4 py-2 text-gray-900 block text-sm font-medium" role="menuitem" tabindex="-1" id="menu-item-0">Most Popular</a>
                            <a href="#" class="px-4 py-2 text-gray-500 block text-sm" role="menuitem" tabindex="-1" id="menu-item-1">Best Rating</a>
                            <a href="#" class="px-4 py-2 text-gray-500 block text-sm" role="menuitem" tabindex="-1" id="menu-item-2">Newest</a>
                            <a href="#" class="px-4 py-2 text-gray-500 block text-sm" role="menuitem" tabindex="-1" id="menu-item-3">Price: Low to High</a>
                            <a href="#" class="px-4 py-2 text-gray-500 block text-sm" role="menuitem" tabindex="-1" id="menu-item-4">Price: High to Low</a>
                        </div>
                    </div>
                </div>

                <button type="button" class="-m-2 ml-5 p-2 text-gray-400 hover:text-gray-500 sm:ml-7">
                    <span class="sr-only">View grid</span>
                    <svg class="h-5 w-5" aria-hidden="true" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4.25 2A2.25 2.25 0 002 4.25v2.5A2.25 2.25 0 004.25 9h2.5A2.25 2.25 0 009 6.75v-2.5A2.25 2.25 0 006.75 2h-2.5zm0 9A2.25 2.25 0 002 13.25v2.5A2.25 2.25 0 004.25 18h2.5A2.25 2.25 0 009 15.75v-2.5A2.25 2.25 0 006.75 11h-2.5zm9-9A2.25 2.25 0 0011 4.25v2.5A2.25 2.25 0 0013.25 9h2.5A2.25 2.25 0 0018 6.75v-2.5A2.25 2.25 0 0015.75 2h-2.5zm0 9A2.25 2.25 0 0011 13.25v2.5A2.25 2.25 0 0013.25 18h2.5A2.25 2.25 0 0018 15.75v-2.5A2.25 2.25 0 0015.75 11h-2.5z" clip-rule="evenodd" />
                    </svg>
                </button>
                <button type="button" class="-m-2 ml-4 p-2 text-gray-400 hover:text-gray-500 sm:ml-6 lg:hidden">
                    <span class="sr-only">Filters</span>
                    <svg class="h-5 w-5" aria-hidden="true" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M2.628 1.601C5.028 1.206 7.49 1 10 1s4.973.206 7.372.601a.75.75 0 01.628.74v2.288a2.25 2.25 0 01-.659 1.59l-4.682 4.683a2.25 2.25 0 00-.659 1.59v3.037c0 .684-.31 1.33-.844 1.757l-1.937 1.55A.75.75 0 018 18.25v-5.757a2.25 2.25 0 00-.659-1.591L2.659 6.22A2.25 2.25 0 012 4.629V2.34a.75.75 0 01.628-.74z" clip-rule="evenodd" />
                    </svg>
                </button>
            </div>
        </div>

        <section aria-labelledby="products-heading" class="pb-24 pt-6">
            <h2 id="products-heading" class="sr-only">Products</h2>

            <div class="gap-x-8 gap-y-10 grid grid-cols-1 lg:grid-cols-4">
                <!-- Filters -->
                <form class="hidden lg:block">
                    <div class="border-gray-200 py-6 border-b">
                        <h3 class="-my-3 flow-root">
                            <!-- Expand/collapse section button -->
                            <button type="button" class="bg-white py-3 text-gray-400 flex w-full items-center justify-between text-sm hover:text-gray-500" aria-controls="filter-section-0" aria-expanded="false">
                                <span class="text-gray-900 font-medium">Brand</span>
                                <span class="ml-6 flex items-center">
                                    <!-- Expand icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                                    </svg>
                                    <!-- Collapse icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M4 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H4.75A.75.75 0 014 10z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                            </button>
                        </h3>
                        <!-- Filter section, show/hide based on section state. -->
                        <div class="pt-6" id="filter-section-0">
                            <div class="space-y-4">
                                @foreach (var brand in _brandList)
                                {
                                    <div class="flex items-center">
                                        <input id="filter-brand-@brand.Id" name="color[]" value="white" type="checkbox" class="h-4 w-4 border-gray-300 text-indigo-600 rounded focus:ring-indigo-500">
                                        <label for="filter-brand-@brand.Id" class="ml-3 text-gray-600 text-sm">@brand.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="border-gray-200 py-6 border-b">
                        <h3 class="-my-3 flow-root">
                            <!-- Expand/collapse section button -->
                            <button type="button" class="bg-white py-3 text-gray-400 flex w-full items-center justify-between text-sm hover:text-gray-500" aria-controls="filter-section-0" aria-expanded="false">
                                <span class="text-gray-900 font-medium">Color</span>
                                <span class="ml-6 flex items-center">
                                    <!-- Expand icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                                    </svg>
                                    <!-- Collapse icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M4 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H4.75A.75.75 0 014 10z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                            </button>
                        </h3>
                        <!-- Filter section, show/hide based on section state. -->
                        <div class="pt-6" id="filter-section-1">
                            <div class="space-y-4">
                                @for (var i = 0; i < 5; i++)
                                {
                                    <div class="flex items-center">
                                        <input id="filter-color-0" name="color[]" value="white" type="checkbox" class="h-4 w-4 border-gray-300 text-indigo-600 rounded focus:ring-indigo-500">
                                        <label for="filter-color-0" class="ml-3 text-gray-600 text-sm">White @i</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="border-gray-200 py-6 border-b">
                        <h3 class="-my-3 flow-root">
                            <!-- Expand/collapse section button -->
                            <button type="button" class="bg-white py-3 text-gray-400 flex w-full items-center justify-between text-sm hover:text-gray-500" aria-controls="filter-section-1" aria-expanded="false">
                                <span class="text-gray-900 font-medium">Category</span>
                                <span class="ml-6 flex items-center">
                                    <!-- Expand icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                                    </svg>
                                    <!-- Collapse icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M4 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H4.75A.75.75 0 014 10z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                            </button>
                        </h3>
                        <!-- Filter section, show/hide based on section state. -->
                        <div class="pt-6" id="filter-section-2">
                            <div class="space-y-4">
                                @foreach (var category in _categoryList)
                                {
                                    <div class="flex items-center">
                                        <input id="filter-category-@category.Id" name="category[]" value="new-arrivals" type="checkbox" class="h-4 w-4 border-gray-300 text-indigo-600 rounded focus:ring-indigo-500">
                                        <label for="filter-category-@category.Id" class="ml-3 text-gray-600 text-sm">@category.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="border-gray-200 py-6 border-b">
                        <h3 class="-my-3 flow-root">
                            <!-- Expand/collapse section button -->
                            <button type="button" class="bg-white py-3 text-gray-400 flex w-full items-center justify-between text-sm hover:text-gray-500" aria-controls="filter-section-2" aria-expanded="false">
                                <span class="text-gray-900 font-medium">Price</span>
                                <span class="ml-6 flex items-center">
                                    <!-- Expand icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                                    </svg>
                                    <!-- Collapse icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M4 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H4.75A.75.75 0 014 10z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                            </button>
                        </h3>
                        <!-- Filter section, show/hide based on section state. -->
                        <div class="pt-6" id="filter-section-3">
                            <div class="space-y-4">
                                <div class="mx-auto max-w-sm">
                                    <label for="number-input-price-min" class="mb-2 text-gray-900 block text-sm font-medium dark:text-white">Min</label>
                                    <input type="number" id="number-input-price-min" aria-describedby="helper-text-explanation" class="bg-gray-50 border-gray-300 text-gray-900 p-2.5 block w-full rounded-lg border text-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="90210" required />
                                </div>

                                <div class="mx-auto max-w-sm">
                                    <label for="number-input-price-max" class="mb-2 text-gray-900 block text-sm font-medium dark:text-white">Max</label>
                                    <input type="number" id="number-input-price-max" aria-describedby="helper-text-explanation" class="bg-gray-50 border-gray-300 text-gray-900 p-2.5 block w-full rounded-lg border text-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="90210" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="border-gray-200 py-6 border-b">
                        <h3 class="-my-3 flow-root">
                            <!-- Expand/collapse section button -->
                            <button type="button" class="bg-white py-3 text-gray-400 flex w-full items-center justify-between text-sm hover:text-gray-500" aria-controls="filter-section-2" aria-expanded="false">
                                <span class="text-gray-900 font-medium">Rating</span>
                                <span class="ml-6 flex items-center">
                                    <!-- Expand icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                                    </svg>
                                    <!-- Collapse icon, show/hide based on section open state. -->
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M4 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H4.75A.75.75 0 014 10z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                            </button>
                        </h3>
                        <!-- Filter section, show/hide based on section state. -->
                        <div class="pt-6" id="filter-section-4">
                            <div class="space-y-4">
                                @for (var i = 1; i <= 5; i++)
                                {
                                    <Rating ValueStar="@i" Max="5"></Rating>
                                }
                            </div>
                        </div>
                    </div>
                </form>

                <!-- Product grid -->
                <div class="lg:col-span-3">
                    <div class="mb-4 gap-4 grid sm:grid-cols-2 md:mb-8 lg:grid-cols-3 xl:grid-cols-3">
                        @foreach (var product in _productPaginationRes.Data)
                        {
                            <ProductCart ProductData="product" />
                        }
                    </div>

                    <div class="w-full text-center">
                        <Pagination TotalItem="_productPaginationRes.Meta.Count"
                                    TotalPage="@_productPaginationRes.Meta.TotalPages"
                                    ButtonCount="10"
                                    CurrentPage="@_productPaginationRes.Meta.CurrentPage"
                                    OnChangedCurrentPage="OnChangedCurrentPage"></Pagination>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

