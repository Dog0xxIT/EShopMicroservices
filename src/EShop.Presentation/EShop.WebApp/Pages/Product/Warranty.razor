@page "/warranty"

@using EShop.WebApp.Components.Order

<section class="bg-white py-8 antialiased dark:bg-gray-900 md:py-16">
    <div class="px-4 mx-auto max-w-screen-xl 2xl:px-0">
        <div class="mx-auto max-w-5xl">
            <div class="gap-4 sm:flex sm:items-center sm:justify-between">
                <h2 class="text-gray-900 text-xl font-semibold dark:text-white sm:text-2xl">My warranties</h2>
                <div class="mt-6 space-x-4 flex items-center sm:mt-0">
                    <div>
                        <label for="warranty-status" class="mb-2 text-gray-900 sr-only block text-sm font-medium dark:text-white">Warranty status</label>
                        <select id="warranty-status" class="min-w-[8rem] border-gray-300 bg-gray-50 p-2.5 text-gray-900 block w-full rounded-lg border text-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder:text-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500">
                            <option selected>All</option>
                            <option value="pending">Pending</option>
                            <option value="active">Active</option>
                            <option value="expired">Expired</option>
                        </select>
                    </div>
                    <span class="text-gray-500 inline-block dark:text-gray-400"> from </span>
                    <div>
                        <label for="warranty-length" class="mb-2 text-gray-900 sr-only block text-sm font-medium dark:text-white">Select warranty length</label>
                        <select id="warranty-length" class="min-w-[10rem] border-gray-300 bg-gray-50 p-2.5 text-gray-900 block w-full rounded-lg border text-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder:text-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500">
                            <option selected>Warranty length</option>
                            <option value="12">12 months</option>
                            <option value="24">24 months</option>
                            <option value="48">48 months</option>
                            <option value="60">60 months</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="mt-6 flow-root sm:mt-8">
                <div class="divide-gray-200 divide-y dark:divide-gray-700">
                    <WarrantyItem />
                    <WarrantyItem />
                    <WarrantyItem />
                    <WarrantyItem />
                    <WarrantyItem />
                </div>
            </div>

            <nav class="mt-6 flex items-center justify-center sm:mt-8" aria-label="Page navigation example">
                <ul class="h-8 -space-x-px flex items-center text-sm">
                    <li>
                        <a href="#" class="ms-0 h-8 border-gray-300 bg-white px-3 text-gray-500 flex items-center justify-center rounded-s-lg border border-e-0 leading-tight hover:bg-gray-100 hover:text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            <span class="sr-only">Previous</span>
                            <svg class="h-4 w-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m15 19-7-7 7-7" />
                            </svg>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="h-8 border-gray-300 bg-white px-3 text-gray-500 flex items-center justify-center border leading-tight hover:bg-gray-100 hover:text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">1</a>
                    </li>
                    <li>
                        <a href="#" class="h-8 border-gray-300 bg-white px-3 text-gray-500 flex items-center justify-center border leading-tight hover:bg-gray-100 hover:text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">2</a>
                    </li>
                    <li>
                        <a href="#" aria-current="page" class="h-8 border-primary-300 bg-primary-50 px-3 text-primary-600 z-10 flex items-center justify-center border leading-tight hover:bg-primary-100 hover:text-primary-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white">3</a>
                    </li>
                    <li>
                        <a href="#" class="h-8 border-gray-300 bg-white px-3 text-gray-500 flex items-center justify-center border leading-tight hover:bg-gray-100 hover:text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">...</a>
                    </li>
                    <li>
                        <a href="#" class="h-8 border-gray-300 bg-white px-3 text-gray-500 flex items-center justify-center border leading-tight hover:bg-gray-100 hover:text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">100</a>
                    </li>
                    <li>
                        <a href="#" class="h-8 border-gray-300 bg-white px-3 text-gray-500 flex items-center justify-center rounded-e-lg border leading-tight hover:bg-gray-100 hover:text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            <span class="sr-only">Next</span>
                            <svg class="h-4 w-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7" />
                            </svg>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</section>